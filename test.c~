#include <stdio.h>
#define MAXBUFLEN 1000000
char *source;
int main()
{
	source = malloc((MAXBUFLEN + 1)*sizeof(char));
	FILE *fp = fopen("sample.txt", "r");
	if (fp != NULL) 
	{
		size_t newLen = fread(source, sizeof(char), MAXBUFLEN, fp);
		if (newLen == 0) 
		{
			fputs("Error reading file", stderr);
	    	} 
		else 
		{
			source[++newLen] = '\0'; /* Just to be safe. */
	    	}
	    	fclose(fp);
	}
	char c;
	int i=0;
	c=source[i];
	while(c!='\0')
	{
		printf("%c",source[i]);
		i++;
		c=source[i];
	}
	return 1;	
		
}
